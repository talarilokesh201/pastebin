<div class="flex justify-between mb-6">
  <a href="/" class="text-indigo-600 font-semibold">Create</a>
  <a href="/api/pastes" class="text-indigo-600 font-semibold">All Pastes</a>
</div>

<h1 class="text-2xl font-bold mb-6">Generated URLs</h1>

<table class="w-full border border-gray-200 rounded-lg overflow-hidden">
  <thead class="bg-gray-100">
    <tr>
      <th class="p-3 text-left">URL</th>
      <th class="p-3 text-left">Views</th>
      <th class="p-3 text-left">Expires At</th>
    </tr>
  </thead>

  <tbody>
    <% pastes.forEach(paste=> { %>
      <tr class="border-t">
        <td class="p-3">
          <a href="/p/<%= paste._id %>" target="_blank" class="text-indigo-600 hover:underline">
            /<%= paste.url %>
          </a>
        </td>

        <td class="p-3">
          <%= paste.views %> / <%= paste.max_views %>
        </td>

        <td class="p-3">
          <%= paste.expires.toLocaleString() %>
        </td>
      </tr>
      <% }) %>
  </tbody>
</table>